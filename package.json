{
  "name": "lint-md",
  "version": "0.2.0",
  "description": "Core of lint-md which used to lint your markdown file for Chinese.",
  "main": "lib/index.js",
  "module": "esm/index.js",
  "scripts": {
    "test": "jest --no-cache",
    "coveralls": "cat ./coverage/lcov.info | coveralls",
    "lib:cjs": "tsc -p tsconfig.json --target ES5 --module commonjs --outDir lib",
    "lib:esm": "tsc -p tsconfig.json --target ES5 --module ESNext --outDir esm",
    "start": "tsc -w"
  },
  "files": [
    "esm",
    "lib"
  ],
  "keywords": [
    "lint",
    "markdown",
    "lint-md",
    "ast-plugin"
  ],
  "dependencies": {
    "ast-plugin": "^0.0.7",
    "lodash": "^4.17.11",
    "remark-parse": "^6.0.2",
    "unified": "^7.0.1"
  },
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "@types/lodash": "^4.14.168",
    "@typescript-eslint/eslint-plugin": "^4.18.0",
    "@typescript-eslint/parser": "^4.18.0",
    "coveralls": "^3.0.2",
    "eslint": "^7.22.0",
    "eslint-plugin-import": "^2.22.1",
    "jest": "^26.6.3",
    "ts-jest": "^26.5.3",
    "typescript": "^4.2.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!**/node_modules/**",
      "!**/vendor/**"
    ]
  },
  "author": "hustcc",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hustcc/lint-md/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hustcc/lint-md.git"
  },
  "homepage": "https://github.com/hustcc/lint-md#readme"
}
